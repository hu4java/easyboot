<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hu4java.user.mapper.MenuMapper">
    <resultMap type="menu" id="menuMap" extends="BaseEntity.entity">

        <collection property="children" ofType="menu" column="id" select="selectByPid" />

    </resultMap>

    <sql id="allColumnSql">
        t.id,
        t.create_by,
        t.create_time,
        t.update_by,
        t.update_time,
        t.is_delete,
        t.version,
        t.title,
        t.code,
        t.path,
        t.pid,
        t.route_name,
        t.type,
        t.icon,
        t.component,
        t.hidden,
        t.status
    </sql>

    <sql id="searchSql">
        <where>
            <if test="condition.name != null and condition.name != ''">
                AND t.name LIKE CONCAT('%', #{condition.name}, '%')
            </if>

            <if test="condition.status != null">
                AND t.status = #{condition.status}
            </if>
        </where>
    </sql>

    <select id="selectByPid" resultMap="menuMap">
        select
        <include refid="allColumnSql"/>
        from sys_menu
        where t.pid = #{pid}
    </select>

    <select id="selectByUserId" resultMap="menuMap">
        select
        <include refid="allColumnSql"/>
        from sys_menu t1
        left join sys_role_menu t2 on t1.id = t2.menu_id
        left join sys_user_role t3 on t2.role_id = t3.role_id
        where t3.user_id = #{userId}
    </select>


</mapper>