<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hu4java.generate.mapper.ColumnMapper">
    <resultMap type="com.hu4java.generate.entity.Column" id="columnMap">
        <result column="column_name" property="name"/>
        <result column="column_comment" property="comment"/>
        <result column="table_name" property="tableName"/>
        <result column="data_type" property="type"/>
    </resultMap>

    <sql id="allColumnSql">
        t.column_name,
        t.column_comment,
        t.data_type,
        t.table_name
    </sql>

    <select id="selectByTableName" resultMap="columnMap">
        select <include refid="allColumnSql"/>
        from information_schema.COLUMNS t
        where t.table_schema = database() and t.table_name = #{tableName}
    </select>

</mapper>